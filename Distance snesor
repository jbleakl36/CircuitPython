import time
import board
import adafruit_hcsr04
import neopixel
sonar = adafruit_hcsr04.HCSR04(trigger_pin=board.D5, echo_pin=board.D4)
dot = neopixel.NeoPixel(board.NEOPIXEL, 1)
dot.brightness = 0.5 
red =0
blue =0
green =0

while True:

    try:
        print(sonar.distance)
        if sonar.distance < 5:
            red= 150
            blue =0
            green =0
        if sonar.distance < 20 and sonar.distance> 5:
             red=0
             blue= 150
             green=0
             if sonar.distance > 20:
              red=0
             blue=0
             green=150
    except RuntimeError:
        print("Retrying!")
    time.sleep(0.1)
    